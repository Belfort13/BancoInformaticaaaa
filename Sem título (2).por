programa
{
	
	funcao inicio()
	{
		// Declaração das variáveis
    inteiro idade

    // Entrada da idade
    escreva("Digite a idade da pessoa: ")
    leia(idade)

    // Verificação se é maior de idade
    se (idade > 18)
    	{
        escreva("A pessoa é maior de idade.")
    	}
   senao
   	{
        escreva("A pessoa é menor de idade.")
   	}
   	
	}
}

